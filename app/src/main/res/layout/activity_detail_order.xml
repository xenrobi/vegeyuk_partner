<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.resto.DetailOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8">

        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Pesanan"
                android:textSize="12sp"
                android:textColor="@color/textSub"
                />

            <TextView
                android:id="@+id/tvStatusSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/Tex"
                android:textSize="12dp"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_selesai" />

            <TextView
                android:id="@+id/tvStatusBatal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/Tex"
                android:textSize="12dp"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_batal" />








        </LinearLayout>


    <!--Bag Alamat-->
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:layout_below="@+id/layoutStatus"
        android:layout_margin="16dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="1"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvNamaKonsumen"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usename"
                android:textColor="@color/colorPrimary"
                android:background="#0000"

                android:gravity="center_vertical"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvPhoneKonsumen"
                android:textSize="@dimen/textsub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+6281268475430"
                android:textColor="@color/Tex"
                android:background="#0000"

                android:gravity="left"
                />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTelepon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_weight="4"
                >

                <ImageButton
                    android:id="@+id/btnTelponKonsumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:background="@drawable/ic_call"
                    android:rotation="-90" />



            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >


            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:gravity="left"
                android:textColor="@color/textSub"
                android:background="#0000"/>

            <TextView
                android:id="@+id/tvAlamatAntar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="left"
                android:text="Alamat User"
                android:textColor="@color/Tex"

                android:textSize="@dimen/text" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"/>

        <!--****** total********-->
        <LinearLayout
            android:id="@+id/layoutCatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textColor="@color/textSub"
                android:textSize="@dimen/text"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/catatan"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:gravity="left"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:padding="16dp"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Pesanan"
            android:textSize="12sp"
            android:textColor="@color/textSub"
            />



        <com.example.vegeyuk.restopatner.utils.NonScrollListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:footerDividersEnabled="true"
            />



    </LinearLayout>


    <LinearLayout

        android:id="@+id/linear3"
        android:layout_below="@id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:layout_margin="16dp"
        >

        <!--******bag subtotal********-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/bagtotal"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:textColor="@color/textSub"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="left"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvSubTotal"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1600 Rs"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"/>


        <!--******sub total********-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/delivery"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Antar"
                android:textColor="@color/textSub"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="left"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvBiayaAntar"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gratis"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:id="@+id/viewpb1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lyt_pb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/pajak_pb1"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PB1 (10%)"
                android:textColor="@color/textSub"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="left"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvPajakPB1"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 10.000"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"/>

        <!--****** total********-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/totalpayable"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Total"
                android:textColor="@color/textSub"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="left"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvTotal"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp.5000"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"/>

        <!--****** total********-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pengantaran"
                android:textColor="@color/textSub"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="left"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvMetodeBayar"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Antar"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>


    </LinearLayout>

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/sbDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear3"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"


            android:textAlignment="center"
            app:inner_text="Geser Untuk Pengantaran"
            app:inner_text_left_padding="30dp"
            app:inner_text_color="@color/White"
            app:inner_text_size="14dp"
            app:inner_text_bottom_padding="13dp"
            app:inner_text_top_padding="13dp"
            app:inner_text_background="@drawable/shape_rounded"
            app:button_image_disabled="@drawable/ic_motor"
            app:button_image_enabled="@drawable/ic_motor"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:button_bottom_padding="20dp"
            app:button_background="@drawable/shape_button"
            />

        <TextView
            android:id="@+id/tvPengantaran"
            android:layout_below="@id/linear3"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/Tex"
            android:textSize="@dimen/text"
            android:visibility="gone"
            android:text="Anda Sedang Dalam Pengantaran"/>

        <TextView
            android:id="@id/btnCancel"
            android:layout_below="@id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tolak/Batalkan Pesanan"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="16dp"/>






    </RelativeLayout>


</ScrollView>